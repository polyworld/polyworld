########################################
###
### CLASS Scene
###
########################################

class Scene {
  Enabled {
    type    Bool
    defaults { gui True; term False }
  }

  Name {
    type    String
    default ""
    assert ( not Enabled or (len(Name) > 0) )
  }

  Title {
    type    String
    default Name
  }

  CameraSettings {
    type    String
    default "Default"
  }

  CameraControllerSettings {
    type    String
    default ""
    assert ( not Enabled or (len(CameraControllerSettings) > 0) )
  }

  Buffer {
    type    Object
    default {}
    properties {

      Width {
        type    Int
        min     1
        default 300
      }

      Height {
        type    Int
        min     1
        default 300
      }

    }
  }

  Movie {
    type    Object
    default {}
    properties {

      Record {
        type    Bool
        default RecordMovie
      }

      Path {
        type    String
        default ""
        assert ( not Record or not Enabled or (len(Path) > 0) )
      }

      SampleFrequency {
        type    Int
        min     1
        default 1
      }

      SampleDuration {
        type    Int
        min     1
        max     SampleFrequency
        default 1
      }
    }
  }
}


