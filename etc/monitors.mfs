########################################
###
### CameraControllerSettings
###
########################################

CameraControllerSettings {
  type    Array
  default [
    {
      Name            "Main"
      Mode            Rotate
      Rotate {
        Radius        0.6
        Height        0.35
        Rate          0.09
        AngleStart    0.0
        Fixation {
          X           0.5
          Y           0.0
          Z           0.5
        }
      }
    }
    ,
    {
      Name            "Overhead"
      Mode            AgentTracking
      AgentTracking {
        AgentTracker  "Fittest"
        Perspective   Overhead
      }
    }
    ,
    {
      Name            "POV"
      Mode            AgentTracking
      AgentTracking {
        AgentTracker  "Fittest"
        Perspective   POV
      }
    }
  ]
  element {
    type    Object
    properties {

      Name {
        type    String
      }

      Mode {
        type    Enum
        enum    Values {
          Rotate,
          AgentTracking,
          Static
        }
      }

      Rotate {
        type    Object
        default {
        }
        properties {

          Radius {
            type    Float
            default 0.6
          }

          Height {
            type    Float
            default 0.35
          }

          Rate {
            type    Float
            default 0.09
          }

          AngleStart {
            type    Float
            default 0.0
          }

          Fixation {
            type    Object
            default {
            }
            properties {

              X {
                type    Float
                default 0.5
                min     0.0
                max     1.0
              }

              Y {
                type    Float
                default 0.0
                min     0.0
                max     1.0
              }

              Z {
                type    Float
                default 0.5
                min     0.0
                max     1.0
              }

            }
          }

        }
      }

      AgentTracking {
        type    Object
        default {
        }
        properties {

          AgentTracker {
            type    String
            default "nil"
          }

          Perspective {
            type    Enum
            default Overhead
            enum    Values {
              Overhead,
              POV
            }
          }

        }
      }

      Static {
        type    Object
        default {
        }
        properties {

          Height {
            type    Float
            default 0.6
          }

        }
      }

    }
  }
}
