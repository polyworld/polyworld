########################################
###
### AgentTrackers
###
########################################

AgentTrackers {
  type    Array
  default [
    {
      Name          "Fittest"
      TrackMode     Agent
      SelectionMode Fitness
      Fitness {
        Rank        1
      }
    }
    ,
    {
      Name          "First"
      TrackMode     Agent
      SelectionMode Number
      Number        1
    }
  ]
  element {
    type    Object
    properties {

      Name {
        type    String
      }

      TrackMode {
        type    Enum
        default Agent
        enum    Values {
          Agent,
          Slot
        }
      }

      SelectionMode {
        type    Enum
        default Fitness
        enum    Values {
          Fitness,
          Number
        }
      }

      Fitness {
        type    Object
        default {
        }
        properties {
          Rank {
            type    Int
            default 1
            assert ( Rank != 0 ) # 1 = best, -1 = worst
          }
        }
      }

      Number {
        type    Int
        default 0
      }

    }
  }
}


